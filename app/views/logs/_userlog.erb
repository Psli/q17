<% item = log.resource %>
<% if item.present? #and item.spams_count < Setting.ask_spam_max %>
	<div class="ask" ask-id="<%= log.id %>">
		<div class="savatar">
      	<%= user_avatar_tag(log.user,:small) %>
    	</div>
		<div class="title small_title">
			<%= user_name_tag(log.user) %> <%= action.include?("UNFOLLOW") ?  "取消关注" : "关注" %> <%= render_item_link(item) %>
		</div>
	</div>
<% end %>
